<div class="tbl-wrapper">
  <p>
    <strong>Title:</strong>
    <%= @post.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= simple_format(@post.content) %>
  </p>

  <%= image_tag(@post.image.url, alt: 'Attachment') if @post.image? %>

  <%= link_to 'Edit', edit_post_path %> |
  <%= link_to 'Back', posts_path %>
</div>