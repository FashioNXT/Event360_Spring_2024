<div class="container">
  <div class="row d-flex align-items-stretch">
    <% @apps.each do |app| %>
      <div class="col-md-3 mb-4">
        <a href="<%= app.homepage_url %>" class="card-link">
          <div class="card h-100"
            <% if app.image_url %>
              style="background-image: linear-gradient(rgba(255, 255, 255, 0.95), rgba(255, 255, 255, 0.95)), url('<%= app.image_url %>');"
            <% end %>>
            <div class="card-body">
              <h5 class="card-title text-center"><%= app.name %></h5>
              <%# <p class="card-text"><%= app.description \%\></p> %>
            </div>
          </div>
        </a>
      </div>
    <% end %>
  </div>
</div>
